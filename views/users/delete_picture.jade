extends ../layout
block content
	.container
		img(src=(userData.picture == "default_avatar.jpg" ? "/images/default/" + userData.picture : "/uploads/avatars/" + userData.picture), width='300', height='200')
		#delete-picture-message
		form.block(id="delete-picture", method="post", action="#{getUrl('delete-picture')}", data-socket="true", rel="#delete-picture-message", redirect="/", data-confirm="#{__('confirm_delete_avatar_text')}")
			button.btn.btn-primary.pull-right(type="submit", tabindex="5") #{__('delete_picture')}